@model IEnumerable<DataDrivenViewEngine.Models.Core.DataField>

@{
    ViewBag.Title = "Index";
}

<h2>Data Fields</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th style="padding: 5px">
            @Html.DisplayNameFor(model => model.FieldName)
        </th>
        <th style="padding: 5px">
            @Html.DisplayNameFor(model => model.DisplayLabel)
        </th>
        <th style="padding: 5px">
            @Html.DisplayNameFor(model => model.DisplayType)
        </th>
        <th style="padding: 5px">
            @Html.DisplayNameFor(model => model.IsMandatory)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FieldName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayLabel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMandatory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentForm.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
